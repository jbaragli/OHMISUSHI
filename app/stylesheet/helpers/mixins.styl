border-radius(n = 3px)
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n

box-shadow(args)
   -webkit-box-shadow args
   -moz-box-shadow args
   box-shadow args

btn-pedir(n = 20px) 
    font-size: remify(n);
    color: $red;
    font-style: italic;
    display: inline-block;
    margin-top: 20px;
    &::before
        content: '-';
        padding-right: 10px;
    &:hover
        text-shadow: 1px 2px 1px rgba(0, 0, 0, .35);
